<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/component_problem_form"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnDownloadLease"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <LinearLayout
        android:id="@+id/btnDownloadLease"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddProblemBack"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_height"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Back"
            android:textColor="@color/colorPrimary"
            android:theme="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:backgroundTint="@color/White"
            app:cornerRadius="3dp"
            app:icon="@drawable/ic_chevron_left_black_24dp"
            app:iconTint="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddProblemReportProblem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_height"

            android:layout_weight="1"
            android:text="Report"
            android:theme="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="3dp"
            app:icon="@drawable/ic_baseline_publish_24"
            app:iconTint="@color/White" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>










