<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="2dp"
    android:fadeScrollbars="false"
    android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


            <include layout="@layout/component_unit_location_form" />

            <include layout="@layout/component_rent_details_form"/>

            <include layout="@layout/component_services_form" />

            <include layout="@layout/component_utilities_form" />


        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddHouseBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_height"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/back"
                android:textColor="@color/colorPrimary"
                android:theme="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                app:backgroundTint="@color/White"
                app:cornerRadius="3dp"
                app:icon="@drawable/ic_chevron_left_black_24dp"
                app:iconTint="@color/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddHouse"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_height"

                android:layout_weight="1"
                android:text="Add House"
                android:theme="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="3dp"
                app:icon="@drawable/ic_add_black_24dp"
                app:iconTint="@color/White" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>








